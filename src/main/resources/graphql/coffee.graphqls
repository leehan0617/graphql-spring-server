schema {
    query: Query
    mutation: Mutation
}

type Query {
    coffees: [Coffee]
    coffee(id: Int!): Coffee
}

type Mutation {
    postCoffee(name: String!, price: Int): Coffee
    updateCoffee(id: Int!, name: String, price: Int): Coffee
    deleteCoffee(id: Int!): SimpleResponse
}

type Coffee {
    id: Int
    name: String
    price: Int
}

type SimpleResponse {
    message: String
}